<div class="row login-devise">
  <div class="col-md-2">
  </div>
  <div class="col-md-2">
    <h2>Entrar</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs form-group">
      <%= f.text_field :email, required: false, autofocus: true, class: 'form-control', placeholder: "Email" %>
      <%= f.password_field :password, required: false, class: 'form-control', placeholder: "Senha" %>
      <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %>
      <%= f.label "Lembre-me" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign in" %>
    </div>
  <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
